<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_light"
    tools:context="com.deeal.exchange.activity.SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/title_bar" />

        <RelativeLayout
            android:id="@+id/rlCheckUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_layout_seletor"
            android:clickable="true"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvGoMyPublish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="@string/text_checkupdate" />

            <ImageView
                android:id="@+id/imgbtGoMyPublish"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:src="@mipmap/btright" />

        </RelativeLayout>

        <include layout="@layout/dividerview_grayline" />

        <RelativeLayout
            android:id="@+id/rlConnectToKefu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_layout_seletor"
            android:clickable="true"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvConnectToKefu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="@string/connectTokefu" />

            <ImageView
                android:id="@+id/imgConnectToKefu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:src="@mipmap/btright" />

        </RelativeLayout>

        <include layout="@layout/dividerview_grayline" />
        <RelativeLayout
            android:id="@+id/rlChangeColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_layout_seletor"
            android:clickable="true"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvChangeColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="切换主题" />

            <ImageView
                android:id="@+id/imgChangeColor"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:src="@mipmap/btright" />

        </RelativeLayout>

        <include layout="@layout/dividerview_grayline" />

        <RelativeLayout
            android:id="@+id/rlAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_layout_seletor"
            android:clickable="true"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="@string/text_about" />

            <ImageView
                android:id="@+id/imgAbout"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:src="@mipmap/btright" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center">

            <Button
                android:id="@+id/btLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/submit_button_selector"
                android:text="@string/text_logout"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
