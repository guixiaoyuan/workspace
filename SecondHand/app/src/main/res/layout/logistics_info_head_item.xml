<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/ll_logistics_info_head_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="99dp"
            android:orientation="horizontal"
            android:background="@color/Logistics_info_background"
            >
            <ImageView
                android:id="@+id/iv_logistics_info_head_item"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/text_xiaoguo"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="99dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_logistics_name_logistics_info_head_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/tv_logistics_number_logistics_info_head_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:text="运单编号："
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/tv_logistics_condition_logistics_info_head_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:text="物流状态："
                    android:textColor="@color/white"
                    />


            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="12dp"
            android:background="@color/ivory_background"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"
                android:text="@string/details_commodity"
                />

        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/ivory_background"
            />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="66dp">

            <RelativeLayout
                android:id="@+id/rl_goods_name_logistics_info"
                android:layout_width="63dip"
                android:layout_height="63dip"
                android:layout_marginLeft="10dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/im_commodity_logistics_info_head_item"
                    android:layout_width="51dip"
                    android:layout_height="51dip"
                    android:src="@drawable/text_xiaoguo"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_commodity_name_logistics_info_head_item"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:maxLines="3"
                android:layout_toRightOf="@+id/rl_goods_name_logistics_info"
                android:layout_toLeftOf="@+id/rl_goods_price_logistics_info"
                />

            <RelativeLayout
                android:id="@+id/rl_goods_price_logistics_info"
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                >

                <TextView
                    android:id="@+id/tv_goods_price_logistics_info_head_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="3dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    />


            </RelativeLayout>


        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="21dip"
            android:background="@color/ivory_background"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="36dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="物流信息"
                android:textSize="16sp"
                />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/ivory_background"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="15dip"
            android:background="@color/white"
            />
    </LinearLayout>
</LinearLayout>
