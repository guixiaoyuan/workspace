<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/com.deeal.exchange"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="#ffffff">

    <Button
        android:id="@+id/btBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:background="@drawable/button_selector_back"

        android:visibility="visible" />


    <Button
        android:id="@+id/btCommoditity"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/view1"
        android:background="@drawable/shape_square"
        android:text="商品列表"
        android:textSize="12sp" />

    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/btMyNeed"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/view1"
        android:background="@drawable/shape_square1"
        android:text="我的需求"
        android:textSize="12sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dip"
        android:layout_below="@+id/btBack" />

</RelativeLayout>
